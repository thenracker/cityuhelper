<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cz.uhk.cityuhelper.DetailActivity"
    android:paddingLeft="7dp">


        <TextView
            android:id="@+id/txtDetailType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/txtDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toby"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject: "
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/txtDetailSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Up My Express Before 4 pm"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:layout_marginBottom="1dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/txtDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May a little bit heavy and it is a fragile."
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Phone: "
        android:layout_marginBottom="1dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/txtDetailPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(852) 5434-3567"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:layout_marginBottom="1dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/txtDetailEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxx65788858@gmail.com"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position: "
        android:textColor="@color/colorPrimaryDark"/>

    <com.google.android.gms.maps.MapView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapView">
    </com.google.android.gms.maps.MapView>



</LinearLayout>
